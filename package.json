{
  "name": "worldmanager",
  "version": "1.0.0",
  "description": "manages wiki and map for offline worldbuilding",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make"
